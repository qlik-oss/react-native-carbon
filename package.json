{
  "name": "@qlik/react-native-carbon",
  "version": "1.1.18",
  "description": "React Native nebula engine",
  "main": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-carbon.podspec"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint . --fix",
    "clean": "rm -rf node_modules",
    "test": "jest --coverage",
    "ci:install": "yarn install --frozen-lockfile",
    "dev": "ditto src ./example/CarbonApp/node_modules/@qlik/react-native-carbon/src",
    "watch": "npm-watch",
    "tsc-build": "tsc src/**/* --declaration --allowJs --emitDeclarationOnly && yarn lint --fix",
    "build:dev": "node ./tools/build.js",
    "dev-setup": "yarn && yarn build:dev && cd example/CarbonApp && yarn && cd ios && pod install"
  },
  "watch": {
    "dev": {
      "patterns": [
        "src"
      ],
      "extensions": "js, jsx, ts, tsx"
    }
  },
  "repository": {
    "url": "git@github.com:qlik-oss/react-native-carbon.git"
  },
  "author": "Qlik",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "git@github.com:qlik-oss/react-native-carbon.git",
  "devDependencies": {
    "@react-native-community/eslint-config": "3.0.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.40",
    "@types/react-native": "0.67.3",
    "@types/react-test-renderer": "17.0.1",
    "color-rgba": "2.4.0",
    "commitlint": "16.2.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jotai": "1.6.0",
    "lodash": "4.17.21",
    "npm-watch": "0.11.0",
    "picasso-plugin-q": "1.6.0",
    "picasso.js": "1.6.0",
    "prettier": "2.6.0",
    "react": "*",
    "react-native": "*",
    "react-native-paper": "4.11.2",
    "react-native-reanimated": "2.4.1",
    "react-native-uuid": "2.0.1",
    "semantic-release": "19.0.2",
    "string-pixel-width": "1.10.0",
    "typescript": "4.6.2"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js,jsx,tsx}",
      "!**/__test__/**"
    ]
  },
  "dev-build": 1
}
